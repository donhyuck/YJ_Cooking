<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ldh.exam.demo.repository.BoardRepository">

	<select id="getBoardByBoardId" resultType="Board">
		SELECT B.*
		FROM board
		AS B
		WHERE B.id = #{ id }
	</select>

	<select id="getBoards" resultType="Board">
		SELECT B.*
		FROM board AS B
	</select>

	<select id="getCategoryByBoardId" resultType="Category">
		SELECT C.*
		FROM
		category AS C
		WHERE boardId = #{boardId}
	</select>

	<select id="getCategories" resultType="Category">
		SELECT C.*
		FROM
		category
		AS C
	</select>

</mapper> 